[Unit]
Description=Set VLAN priority on %i to Network Control (7)
ConditionPathExists=/sys/class/net/%i
After=network.target
After=pve-sdn-commit.service
PartOf=pve-sdn-commit.service

[Service]
Type=oneshot
ExecStart=set-vlan-pcp.sh --interface %i --pcp NC -v

[Install]
WantedBy=pve-sdn-commit.service
